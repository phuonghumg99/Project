<odoo>
    <record id="th_status_detail_view_tree" model="ir.ui.view">
        <field name="name">th_status_detail_view_tree</field>
        <field name="model">th.status.detail</field>
        <field name="arch" type="xml">
            <tree string="" editable="bottom">
                <field name="sequence"  widget="handle"/>
                <field name="name"/>
                <field name="th_description"/>
                <field name="th_status_category_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="th_status_detail_view_act" model="ir.actions.act_window">
        <field name="name">Trạng thái chi tiết</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.status.detail</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>