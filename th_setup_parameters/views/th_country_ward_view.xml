<odoo>
    <record id="th_country_ward_view_tree" model="ir.ui.view">
        <field name="name">th_country_ward_view_tree</field>
        <field name="model">th.country.ward</field>
        <field name="arch" type="xml">
            <tree string="" editable="bottom">
                <field name="name"/>
                <field name="th_ref"/>
                <field name="th_district_id"/>
            </tree>
        </field>
    </record>

    <record id="th_country_ward_view_act" model="ir.actions.act_window">
        <field name="name">Phường / Xã</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.country.ward</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>